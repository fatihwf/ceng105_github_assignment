
#include<stdio.h>
int main() {

int num1,num2,result;
char decision;

printf("press a for addition, press s for subtraction, press anything else for quit: ");
scanf("%c",&decision);


switch (decision)   {
    case 'a':
        printf("enter two integers: ");
        scanf("%d %d",&num1,&num2);
        result = num1 + num2 ;
        printf("Summary of these numbers are %d",result);
        break;

    case 's':
        printf("enter two integers: ");
        scanf("%d %d",&num1,&num2);
        result = num1-num2 ;
        printf("subtraction  of these numbers are %d",result);
        break;

    default:
        printf("exiting program ");
        break ;
  }



return(0) ;

}
