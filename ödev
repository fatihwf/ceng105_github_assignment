
#include<stdio.h>
int main() {

int num1,num2,result;
char decision;

printf("Press 'a' key for addition, press 's' key for subtraction, press anything else for quit program: ");
scanf("%c",&decision);


switch (decision)   {
    case 'a':
        printf("Enter two integers: ");
        scanf("%d %d",&num1,&num2);
        result = num1 + num2 ;
        printf("Summary of these numbers are %d",result);
        break;

    case 's':
        printf("enter two integers: ");
        scanf("%d %d",&num1,&num2);
        result = num1-num2 ;
        printf("Subtraction  of these numbers are %d",result);
        break;

    default:
        printf("Exiting program... ");
        break ;
  }



return(0) ;

}
